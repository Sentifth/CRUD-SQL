<Window x:Class="WPFDatabse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDatabse"
        mc:Ignorable="d"
        Title="Contactos" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="101,20,20,20">
            <TextBox x:Name="txtNombre" Height="26"
                     Margin="0,0,0,15"/>
            <TextBox x:Name="txtCorreo" Height="26"
                     Margin="0,0,0,15"/>
            <TextBox x:Name="txtTelefono" Height="26"
                     Margin="0,0,0,15"/>
            <Button Content="Guardar"
                    x:Name="btnGuardar"
                    Click="btnGuardar_Click"/>
        </StackPanel>
        <Label Content="Nombre:" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="86" Height="26"/>
        <Label Content="Correo:" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="86" Height="26"/>
        <Label Content="Teléfono:" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Width="86" Height="26"/>
    </Grid>
</Window>
